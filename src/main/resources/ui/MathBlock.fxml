<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<fx:root type="StackPane" xmlns:fx="http://javafx.com/fxml/">

    <BorderPane styleClass="value, block" pickOnBounds="false" minHeight="40" minWidth="60">
        <top>
            <VBox alignment="CENTER">
                <VBox fx:id="inputSpace1" pickOnBounds="false" styleClass="inSpace, left"/>
                <VBox fx:id="inputSpace2" pickOnBounds="false" styleClass="inSpace, right"/>
            </VBox>
        </top>

        <center>
            <VBox alignment="CENTER" minHeight="100" minWidth="100" spacing="10">
                <ComboBox fx:id="methodComboBox" layoutX="15.0" layoutY="33.0" prefWidth="150.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="ADD"/>
                            <String fx:value="EXT"/>
                            <String fx:value="MIX"/>
                            <String fx:value="MIN"/>
                            <String fx:value="MAX"/>
                            <String fx:value="MULL"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <TextField fx:id="textField" maxWidth="120" editable="false">
                    <padding>
                        <Insets bottom="4" left="4" right="4"/>
                    </padding>
                </TextField>
            </VBox>
        </center>

        <bottom>
            <VBox fx:id="outputSpace" pickOnBounds="false"/>
        </bottom>
    </BorderPane>

</fx:root>